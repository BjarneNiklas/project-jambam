---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Drawer from '../components/Drawer.astro';
---

<!doctype html>
<html lang="de" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Bjarne Niklas Luttermann - Media Informatics Master Student Portfolio. Specializing in Flutter, Unity, and next-generation media platforms." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
		
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<!-- Tailwind Global Styles -->
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body class="font-['Inter'] antialiased">
		<!-- Header mit AuraV-Logo und Link -->
		<header style="display:flex;align-items:center;gap:0.5rem;padding:0.5rem 1rem;justify-content:space-between;">
			<div style="display:flex;align-items:center;gap:0.5rem;">
				<a href="https://aurav.tech" target="_blank" rel="noopener" title="Zur Unternehmensseite von AuraV Technologies" style="display:flex;align-items:center;">
					<img src="/favicon.svg" alt="AuraV Technologies Logo" style="height:2rem;width:2rem;" />
				</a>
				<span style="font-weight:600;font-size:1.1rem;letter-spacing:0.01em;">Bjarne Niklas Luttermann</span>
			</div>
		</header>
		<Drawer />
		<!-- Global Language Switcher -->
		<div style="position:fixed;top:1.5rem;right:2rem;z-index:50;">
			<button id="lang-switch" class="px-4 py-2 bg-teal-600 text-white rounded-full shadow hover:bg-teal-700 transition">EN</button>
		</div>
		<script>
		window.lang = 'de';
		document.getElementById('lang-switch').onclick = function() {
			window.lang = window.lang === 'de' ? 'en' : 'de';
			this.textContent = window.lang === 'de' ? 'EN' : 'DE';
			// Trigger all language switchers
			if(window.switchLangAbout) window.switchLangAbout(window.lang);
			if(window.switchLangSkills) window.switchLangSkills(window.lang);
			if(window.switchLangProjects) window.switchLangProjects(window.lang);
			if(window.switchLangContact) window.switchLangContact(window.lang);
		};
		window.addEventListener('DOMContentLoaded', function() {
			if(window.switchLangAbout) window.switchLangAbout(window.lang);
			if(window.switchLangSkills) window.switchLangSkills(window.lang);
			if(window.switchLangProjects) window.switchLangProjects(window.lang);
			if(window.switchLangContact) window.switchLangContact(window.lang);
		});
		</script>
		<slot />
		<footer style="width:100%;text-align:center;padding:0.5rem 0;background:rgba(13,148,136,0.1);font-size:0.95rem;color:#14b8a6;position:fixed;bottom:0;left:0;z-index:40;">
 			Diese Domain ist ggf. erwerbbar. Bei Interesse bitte Kontakt aufnehmen.
 		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 13, 148, 136; /* teal-600 */
		--accent-light: 94, 234, 212; /* teal-300 */
		--accent-dark: 4, 47, 46; /* teal-900 */
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
	}
	
	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: #0f172a; /* teal-tinted dark */
		background-size: 224px;
	}
	
	code {
		font-family: 'JetBrains Mono', monospace;
	}
	
	/* Custom scrollbar */
	::-webkit-scrollbar {
		width: 8px;
	}
	
	::-webkit-scrollbar-track {
		background: #1e293b;
	}
	
	::-webkit-scrollbar-thumb {
		background: #14b8a6; /* teal-500 */
		border-radius: 4px;
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: #0d9488; /* teal-600 */
	}
</style> 