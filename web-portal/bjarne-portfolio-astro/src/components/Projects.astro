---
// Projects component with interactive project cards
---

<script type="module">
	if (typeof window !== 'undefined') {
		window.switchLangProjects = function(lang) {
			document.querySelectorAll('[data-lang-projects]').forEach(el => {
				el.style.display = el.getAttribute('data-lang-projects') === lang ? '' : 'none';
			});
		};
	}
</script>

