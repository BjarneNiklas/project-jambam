---
// About component with personal information and background

import cv from '../data/cv.json';

const interests = [
	{ icon: 'fa-solid fa-plane', label: 'Reisen' },
	{ icon: 'fa-solid fa-music', label: 'EDM/Pop Musik' },
	{ icon: 'fa-solid fa-dumbbell', label: 'Sport' },
	{ icon: 'fa-solid fa-users', label: 'Freunde & Familie' },
	{ icon: 'fa-solid fa-wand-magic-sparkles', label: 'Generative KI' },
	{ icon: 'fa-solid fa-newspaper', label: 'Tech News' },
];

const interestLabels = cv.interests;
const facts = cv.facts;
const aboutText = cv.about;
const linkedin = cv.linkedin;

// Map cv.interests to icons (fallback: generic icon)
const iconMap = {
	'Reisen': 'fa-solid fa-plane',
	'EDM/Pop Musik': 'fa-solid fa-music',
	'Sport': 'fa-solid fa-dumbbell',
	'Freunde & Familie': 'fa-solid fa-users',
	'Generative KI': 'fa-solid fa-wand-magic-sparkles',
	'Tech News': 'fa-solid fa-newspaper',
};
const interestsWithIcons = interestLabels.map(label => ({
	icon: iconMap[label] || 'fa-solid fa-star',
	label
}));
---

<script type="module">
	if (typeof window !== 'undefined') {
		window.switchLangAbout = function(lang) {
			document.querySelectorAll('[data-lang-about]').forEach(el => {
				el.style.display = el.getAttribute('data-lang-about') === lang ? '' : 'none';
			});
		};
	}
</script>

<section id="about" class="about-section fade-in">
	<div class="about-avatar-wrapper">
		<img src="/avatar-placeholder.png" alt="Avatar von Bjarne Niklas Luttermann" class="about-avatar" />
	</div>
	<h2 class="about-title">Ãœber Mich</h2>
	<div class="about-text">{aboutText}</div>
	<a href={linkedin} target="_blank" rel="noopener" class="about-cta-btn">LinkedIn-Profil ansehen</a>
	<div class="about-quickfacts">
		{facts.map(f => (
			<div class="quickfact">
				<div class="quickfact-value">{f.value}</div>
				<div class="quickfact-label">{f.label}</div>
			</div>
		))}
	</div>
	<h3 class="about-subtitle">Interessen & Hobbys</h3>
	<div class="about-interests">
		{interestsWithIcons.map(i => (
			<div class="interest-chip-static">
				<i class={i.icon}></i>
				<span>{i.label}</span>
			</div>
		))}
	</div>
</section>

<style>
.about-section {
	width: 100%;
	max-width: 700px;
	margin: 0 auto 3rem auto;
	padding: 2.5rem 1.5rem 2rem 1.5rem;
	background: rgba(15,23,42,0.85);
	border-radius: 1.5rem;
	box-shadow: 0 4px 32px 0 rgba(20,184,166,0.10);
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
	z-index: 5;
	opacity: 0;
	transform: translateY(24px);
	animation: fadeInAbout 1.1s cubic-bezier(.4,0,.2,1) 0.2s forwards;
}
@keyframes fadeInAbout {
	to {
		opacity: 1;
		transform: none;
	}
}
.about-avatar-wrapper {
	display: flex;
	justify-content: center;
	margin-top: -3.5rem;
	margin-bottom: 1.2rem;
}
.about-avatar {
	width: 5.5rem;
	height: 5.5rem;
	border-radius: 50%;
	object-fit: cover;
	border: 3px solid #fff;
	box-shadow: 0 2px 12px 0 rgba(20,184,166,0.15), 0 0 0 4px rgba(59,130,246,0.08);
	background: #fff;
}
.about-title {
	color: #14b8a6;
	font-size: 2.2rem;
	font-weight: 700;
	margin-bottom: 1.2rem;
	text-align: center;
}
.about-text {
	color: #fff;
	font-size: 1.15rem;
	text-align: center;
	margin-bottom: 1.5rem;
	max-width: 600px;
	line-height: 1.6;
	background: rgba(20,184,166,0.07);
	border-radius: 0.75rem;
	padding: 1.1rem 1.2rem;
	box-shadow: 0 2px 8px 0 rgba(20,184,166,0.07);
}
.about-cta-btn {
	display: inline-block;
	margin-bottom: 1.7rem;
	background: linear-gradient(90deg, #3b82f6, #ef4444, #f59e42, #22c55e);
	background-size: 200% 200%;
	color: #fff;
	font-weight: 600;
	padding: 0.7rem 1.4rem;
	border-radius: 0.5rem;
	box-shadow: 0 2px 8px rgba(0,0,0,0.12);
	text-decoration: none;
	font-size: 1.08rem;
	transition: background-position 0.5s, transform 0.2s;
	background-position: 0% 50%;
}
.about-cta-btn:focus, .about-cta-btn:hover {
	background-position: 100% 50%;
	transform: scale(1.04);
}
.about-quickfacts {
	display: flex;
	flex-wrap: wrap;
	gap: 1.1rem;
	justify-content: center;
	margin-bottom: 2.1rem;
}
.quickfact {
	background: rgba(20,184,166,0.10);
	border-radius: 0.75rem;
	padding: 0.7rem 1.2rem;
	min-width: 90px;
	text-align: center;
	box-shadow: 0 2px 8px 0 rgba(20,184,166,0.08);
}
.quickfact-value {
	color: #14b8a6;
	font-size: 1.3rem;
	font-weight: 700;
	margin-bottom: 0.2rem;
}
.quickfact-label {
	color: #fff;
	font-size: 0.98rem;
}
.about-subtitle {
	color: #14b8a6;
	font-size: 1.4rem;
	font-weight: 600;
	margin-bottom: 1.1rem;
	text-align: center;
}
.about-interests {
	display: flex;
	flex-wrap: wrap;
	gap: 1rem;
	justify-content: center;
}
.interest-chip-static {
	display: flex;
	flex-direction: column;
	align-items: center;
	background: rgba(255,255,255,0.10);
	border-radius: 0.75rem;
	padding: 0.85rem 1.1rem 0.6rem 1.1rem;
	color: #fff;
	font-size: 1.05rem;
	min-width: 90px;
	box-shadow: 0 2px 8px 0 rgba(20,184,166,0.10);
	user-select: none;
}
.interest-chip-static i {
	font-size: 1.5rem;
	margin-bottom: 0.4rem;
}
@media (max-width: 600px) {
	.about-section {
		padding: 1.2rem 0.5rem 1.2rem 0.5rem;
	}
	.about-avatar {
		width: 3.5rem;
		height: 3.5rem;
		border-width: 2px;
	}
	.about-title {
		font-size: 1.4rem;
	}
	.about-text {
		font-size: 1rem;
		padding: 0.7rem 0.5rem;
	}
	.about-quickfacts {
		gap: 0.6rem;
	}
	.quickfact {
		font-size: 0.95rem;
		min-width: 70px;
		padding: 0.5rem 0.7rem;
	}
	.quickfact-value {
		font-size: 1.05rem;
	}
	.about-interests {
		gap: 0.6rem;
	}
	.interest-chip-static {
		font-size: 0.95rem;
		min-width: 70px;
		padding: 0.6rem 0.7rem 0.4rem 0.7rem;
	}
	.interest-chip-static i {
		font-size: 1.1rem;
	}
}
</style>
