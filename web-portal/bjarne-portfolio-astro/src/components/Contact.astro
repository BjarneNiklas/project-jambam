<script type="module">
  if (typeof window !== 'undefined') {
    window.switchLangContact = function(lang) {
      document.querySelectorAll('[data-lang-contact]').forEach(el => {
        el.style.display = el.getAttribute('data-lang-contact') === lang ? '' : 'none';
      });
    };
  }
</script>

