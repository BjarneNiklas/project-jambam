---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '#about', label: 'Über mich' },
  { href: '#skills', label: 'Skills' },
  { href: '#projects', label: 'Projekte' },
  { href: '#contact', label: 'Kontakt' },
  { href: 'https://aurav.tech', label: 'AuraV Technologies', external: true },
];
---

<div id="drawer-backdrop" class="drawer-backdrop" onclick="document.getElementById('drawer').classList.remove('open');this.classList.remove('show')"></div>
<div id="drawer" class="drawer" tabindex="-1" aria-label="Navigation">
  <button class="drawer-close" aria-label="Menü schließen" onclick="document.getElementById('drawer').classList.remove('open');document.getElementById('drawer-backdrop').classList.remove('show')">&times;</button>
  <nav>
    <ul>
      <li><a href="/" class="drawer-link">Home</a></li>
      <li><a href="#about" class="drawer-link">Über mich</a></li>
      <li class="drawer-name-item">
        <div class="drawer-name">
          <span class="hamburger-icon">☰</span>
          <span class="name-text">Bjarne Niklas Luttermann</span>
        </div>
      </li>
      <li><a href="#skills" class="drawer-link">Skills</a></li>
      <li><a href="#projects" class="drawer-link">Projekte</a></li>
      <li><a href="#contact" class="drawer-link">Kontakt</a></li>
      <li><a href="https://aurav.tech" target="_blank" rel="noopener" class="drawer-link">AuraV Technologies</a></li>
    </ul>
  </nav>
</div>
<button class="drawer-toggle" aria-label="Menü öffnen" onclick="document.getElementById('drawer').classList.add('open');document.getElementById('drawer-backdrop').classList.add('show')">
  <span class="drawer-icon"></span>
</button>

<style>
.drawer {
  position: fixed;
  top: 0; left: 0;
  width: 260px;
  height: 100vh;
  background: #0f172a;
  color: #fff;
  box-shadow: 2px 0 16px rgba(0,0,0,0.15);
  transform: translateX(-100%) scale(0.98);
  opacity: 0;
  transition: transform 0.35s cubic-bezier(.4,0,.2,1), opacity 0.25s cubic-bezier(.4,0,.2,1);
  z-index: 100;
  display: flex;
  flex-direction: column;
  padding: 2rem 1.5rem 1rem 1.5rem;
  pointer-events: none;
}
.drawer.open {
  transform: translateX(0) scale(1);
  opacity: 1;
  pointer-events: auto;
}
.drawer-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(15,23,42,0.45);
  z-index: 99;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.25s;
}
.drawer-backdrop.show {
  opacity: 1;
  pointer-events: auto;
}
.drawer-close {
  background: none;
  border: none;
  color: #fff;
  font-size: 2rem;
  align-self: flex-end;
  cursor: pointer;
  margin-bottom: 2rem;
}
.drawer-link {
  display: block;
  padding: 0.75rem 0;
  color: #fff;
  text-decoration: none;
  font-size: 1.1rem;
  border-bottom: 1px solid #334155;
  transition: color 0.2s;
}
.drawer-link:hover, .drawer-link:focus {
  color: #14b8a6;
}
.drawer-name-item {
  padding: 0.75rem 0;
  border-bottom: 1px solid #334155;
}
.drawer-name {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: #fff;
  font-size: 1.1rem;
  font-weight: 700;
}
.hamburger-icon {
  font-size: 1.2rem;
  color: #14b8a6;
}
.name-text {
  color: #fff;
  font-weight: 700;
}
.drawer-toggle {
  position: fixed;
  top: 1.5rem;
  right: 2rem;
  z-index: 110;
  background: #0f172a;
  border: none;
  border-radius: 50%;
  width: 2.5rem;
  height: 2.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.12);
  cursor: pointer;
}
.drawer-icon {
  width: 1.5rem;
  height: 0.2rem;
  background: #fff;
  border-radius: 2px;
  position: relative;
  display: block;
}
.drawer-icon::before, .drawer-icon::after {
  content: '';
  position: absolute;
  width: 1.5rem;
  height: 0.2rem;
  background: #fff;
  border-radius: 2px;
  left: 0;
}
.drawer-icon::before {
  top: -0.5rem;
}
.drawer-icon::after {
  top: 0.5rem;
}
@media (min-width: 768px) {
  .drawer-toggle {
    display: none;
  }
}
</style> 