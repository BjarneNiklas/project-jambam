    <p class="text-xs text-gray-500 mt-8" data-lang-legal="de">Dieses Impressum gilt auch für die Social-Media-Profile, sofern vorhanden.</p>
    <p class="text-xs text-gray-500 mt-8" data-lang-legal="en" style="display:none">This legal notice also applies to social media profiles, if available.</p>
    <script>
      if (typeof window !== 'undefined') {
        function switchLangLegal(lang) {
          document.querySelectorAll('[data-lang-legal]').forEach(el => {
            el.style.display = el.getAttribute('data-lang-legal') === lang ? '' : 'none';
          });
        }
        window.switchLangLegal = switchLangLegal;
        window.addEventListener('DOMContentLoaded', function() {
          switchLangLegal(window.lang || 'de');
        });
        window.addEventListener('languagechange', function() {
          switchLangLegal(window.lang || 'de');
        });
      }
    </script>
